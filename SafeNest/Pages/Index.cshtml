@page
@model SafeNest.Pages.IndexModel

<h1>Sensor Readings</h1>

<form method="post" class="form">
    <label>Sensor Type:</label>
    <input asp-for="NewSensorType" />

    <label>Value:</label>
    <input asp-for="NewSensorValue" type="number" step="0.1" />

    <button type="submit">Add Reading</button>
</form>

<hr />

<h2>Saved Data</h2>

<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Timestamp</th>
            <th>Type</th>
            <th>Value</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model.Readings)
        {
            <tr>
                <td>@r.Id</td>
                <td>@r.Timestamp</td>
                <td>@r.SensorType</td>
                <td>@r.Value</td>
            </tr>
        }
    </tbody>
</table>
