@page
@model SafeNest.Pages.LoginModel

<div class="login-wrapper">
    <div class="welcome-section">
        <h1>Welcome to <span>SafeNest</span></h1>
        <p>Your smart home security dashboard — monitor sensors, view real-time weather, and protect your home with ease.</p>
    </div>

    <div class="login-card">
        <h2>Secure Login</h2>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger">@Model.ErrorMessage</div>
        }

        <form method="post">
            <label for="pin" class="label-pin">Enter Your 4-Digit PIN</label>
            <input type="password" class="input-pin" id="pin" name="Pin" maxlength="4" required />

            <button type="submit" class="btn-login">Login</button>
        </form>
    </div>
</div>

<style>

    body {
        background: #f1f5f9;
    }

    .login-wrapper {
        max-width: 900px;
        margin: 60px auto;
        text-align: center;
        display: flex;
        flex-direction: column;
        gap: 30px;
    }

    .welcome-section h1 {
        font-size: 40px;
        font-weight: 800;
        margin-bottom: 10px;
    }

    .welcome-section span {
        color: #2563eb;
    }

    .welcome-section p {
        font-size: 18px;
        color: #555;
        max-width: 600px;
        margin: 0 auto;
    }

    .login-card {
        background: white;
        padding: 30px;
        border-radius: 15px;
        width: 350px;
        margin: 0 auto;
        box-shadow: 0 8px 20px rgba(0,0,0,0.1);
    }

        .login-card h2 {
            margin-bottom: 20px;
            font-weight: 700;
        }

    .label-pin {
        display: block;
        font-size: 15px;
        margin-bottom: 8px;
        text-align: left;
        color: #333;
    }

    .input-pin {
        width: 100%;
        padding: 12px;
        border-radius: 8px;
        border: 1px solid #cbd5e1;
        font-size: 18px;
        text-align: center;
        letter-spacing: 5px;
        margin-bottom: 15px;
    }

    .btn-login {
        width: 100%;
        background: #2563eb;
        border: none;
        padding: 12px;
        color: white;
        border-radius: 8px;
        font-size: 18px;
        cursor: pointer;
        transition: 0.2s;
    }

        .btn-login:hover {
            background: #1e40af;
        }

</style>
